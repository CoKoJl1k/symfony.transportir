{% extends 'base.html.twig' %}

{% block title %}Claims{% endblock %}

{% block body %}
    <h1>Claims</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ claim.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ claim.text }}</td>
            </tr>
            <tr>
                <th>Files</th>
                <td>{{ claim.files }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ claim.userId }}</td>
            </tr>
            <tr>
                <th>Status_id</th>
                <td>{{ claim.statusId }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_claims_index') }}">back to list</a>
    <a href="{{ path('app_claims_edit', {'id': claim.id}) }}">edit</a>
    {{ include('claims/_delete_form.html.twig') }}


    <h1>Comments </h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Text</th>
            <th>Files</th>
            <th>User_id</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.text }}</td>
                <td>{{ comment.files }}</td>
                <td>{{ comment.userId }}</td>

                <td>
                    <a href="{{ path('app_comments_show', {'id': comment.id}) }}">show</a>
                    <a href="{{ path('app_comments_edit', {'id': comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_comments_new') }}">Create new</a>
{% endblock %}
